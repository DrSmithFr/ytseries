# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{php,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[*.{js,json}]
charset = utf-8
indent_style = space
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab

[*.scss]
indent_style = tab

# avoid silly trimming
[*.{diff,md}]
trim_trailing_whitespace = false
